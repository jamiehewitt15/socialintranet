doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="/bootstrap/css/bootstrap.min.css")
    link(rel="viewport", content="width=device-width, initial-scale=1.0")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
        a.navbar-brand(href='/') Solidaridad Intranet
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarColor01.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/discover') Discover
            li.nav-item
              a.nav-link(href='/chat') Chat
            li.nav-item
              a.nav-link(href='/qa') Q&A
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type='text', placeholder='Search')
            button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search
            button.btn.btn-success.my-2.my-sm-0(type='submit', style='margin-left:10px;', onclick="window.location.href = 'https://w3docs.com';") +
            a(href='/profile') 
              img(src='/images/user-profile.png', alt='Profile Picture', style='width:36px; margin-left:10px')
    block content
    
      
    script(src="/javascripts/jquery-3.4.1.min.js")
    script(src="/bootstrap/js/bootstrap.min.js")

    

    