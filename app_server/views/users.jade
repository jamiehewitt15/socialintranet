extends layout

block content
  
  div(style='margin-top:30px; margin-left:30px;')
    h2 Users
    p All users are shown bellow
  hr

  .container-fluid.gedf-wrapper(ng-controller="usersList")
          .row
            .col-md-3
              .card
                .card-body
                  .h5 Users
                ul.list-group.list-group-flush
                  li.list-group-item
                    .h6.text-muted(ng-repeat="user in data.users") 
                       | {{ user.name }} - Joined: {{user.joined | date : 'dd/MM/yyyy'}}
                    